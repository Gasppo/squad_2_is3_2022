// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  output   = "../node_modules/.prisma/client"
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgres"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOWDATABASE_URL")
}

model TicketAuthor {
  id          Int      @id @default(autoincrement())
  razonSocial String
  CUIT        String
  tickets     Ticket[]
}

model SupportMember {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  tickets   Ticket[]
}

model Ticket {
  id          Int            @id @default(autoincrement())
  title       String
  description String
  status      String
  priority    Int
  author      TicketAuthor   @relation(fields: [authorId], references: [id])
  authorId    Int
  assignee    SupportMember? @relation(fields: [asigneeId], references: [id])
  asigneeId   Int?
  internal    Boolean
  createdAt   DateTime
  updatedAt   DateTime
  productId   Int?
}
