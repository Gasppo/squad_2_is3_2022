// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  output   = "../node_modules/.prisma/client"
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model TicketAuthor {
  id      Int      @id @default(autoincrement())
  firstName    String
  lastName    String
  email   String
  tickets Ticket[]
}

model SupportMember {
  id      Int      @id @default(autoincrement())
  firstName    String
  lastName    String
  email   String
  tickets Ticket[]
}

model Ticket {
  id          Int            @id @default(autoincrement())
  title       String
  description String
  status      String
  priority    Int
  author      TicketAuthor   @relation(fields: [authorId], references: [id])
  authorId    Int
  assignee    SupportMember? @relation(fields: [asigneeId], references: [id])
  asigneeId   Int?
  internal    Boolean
  createdAt   DateTime
  updatedAt   DateTime
  tasks       Task[]
  product     Product?       @relation(fields: [productId], references: [id])
  productId   Int?
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  vendor      String
  version     String
  tickets     Ticket[]
}

model Task {
  id                 Int       @id @default(autoincrement())
  title              String
  description        String
  status             String
  priority           Int
  createdAt          DateTime
  updatedAt          DateTime
  ticket             Ticket    @relation(fields: [ticketId], references: [id])
  ticketId           Int
  resourceAssignedId Int
}
